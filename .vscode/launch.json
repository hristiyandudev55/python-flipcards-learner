{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Uvicorn",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload"
            ],
            "cwd": "${workspaceFolder}/app",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/app"
            },
            "console": "integratedTerminal"
        }
    ]
}